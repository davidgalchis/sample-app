{
    "components": {
        "my_lambda": {
            "type": "@lambda.function",
            "description": "CloudKommand Tutorial Lambda",
            "timeout": 10,
            "policies": ["@my_policy"],
            "keep_warm": true
        },
        "my_policy": {
            "type": "@iam.policy",
            "description": "CloudKommand Tutorial Policy",
            "document": {
                "Version": "2012-10-17",
                "Statement": [{
                    "Sid": "Vis",
                    "Effect": "Allow",
                    "Action": [
                        "lambda:*",
                        "events:*",
                        "dynamodb:*",
                        "sns:*"
                    ],
                    "Resource": "*"
                }]
            }
        }
    },
    "repos": {
        "iam": "https://github.com/cloudkommand/iam",
        "lambda": "https://github.com/cloudkommand/lambda",
        "eventbridge": "https://github.com/cloudkommand/eventbridge"
    }
}